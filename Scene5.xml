<scene>
    <camera>
        <aspect_ratio>1.7</aspect_ratio>
        <image_width>400</image_width>
        <samples_per_pixel>100</samples_per_pixel>
        <max_depth>50</max_depth>
        <vfov>45</vfov>
        <lookfrom>
            <x>0.0</x>
            <y>0.5</y>
            <z>3.0</z>
        </lookfrom>
        <lookat>
            <x>0.0</x>
            <y>0.0</y>
            <z>-1.0</z>
        </lookat>
        <vup>
            <x>0.0</x>
            <y>1.0</y>
            <z>0.0</z>
        </vup>
        <defocus_angle>0.0</defocus_angle>
        <focus_dist>4.0</focus_dist>
    </camera>

    <objects>
        <!-- Sol -->
        <object type="sphere">
            <position x="0.0" y="-100.5" z="-1.0" />
            <radius>100.0</radius>
            <material type="lambertian">
                <color r="0.8" g="0.8" b="0.8" />
            </material>
        </object>

        <!-- Sphère transparente au centre -->
        <object type="sphere">
            <position x="0.0" y="0.0" z="-1.0" />
            <radius>0.5</radius>
            <material type="lambertian">
                <color r="0.9" g="0.9" b="0.9" />
            </material>
        </object>

        <!-- Sphère rouge -->
        <object type="sphere">
            <position x="-1.0" y="0.0" z="-1.5" />
            <radius>0.5</radius>
            <material type="lambertian">
                <color r="0.8" g="0.1" b="0.1" />
            </material>
        </object>

        <!-- Sphère verte -->
        <object type="sphere">
            <position x="1.0" y="0.0" z="-1.5" />
            <radius>0.5</radius>
            <material type="lambertian">
                <color r="0.1" g="0.8" b="0.1" />
            </material>
        </object>

        <!-- Sphère bleue -->
        <object type="sphere">
            <position x="-1.5" y="0.5" z="-0.5" />
            <radius>0.5</radius>
            <material type="metal">
                <color r="0.1" g="0.1" b="0.8" />
                <fuzz>0.0</fuzz>
            </material>
        </object>

        <!-- Sphère dorée (métal) -->
        <object type="sphere">
            <position x="1.5" y="0.5" z="-0.5" />
            <radius>0.5</radius>
            <material type="metal">
                <color r="0.8" g="0.6" b="0.2" />
                <fuzz>0.0</fuzz>
            </material>
        </object>

        <!-- Sphère violette -->
        <object type="sphere">
            <position x="0.0" y="-0.5" z="-2.0" />
            <radius>0.5</radius>
            <material type="lambertian">
                <color r="0.5" g="0.1" b="0.6" />
            </material>
        </object>
    </objects>
</scene>
